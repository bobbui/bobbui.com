---
interface Props {
  siteKey?: string;
  action?: string;
  theme?: string;
  size?: string;
}

const {
  siteKey = import.meta.env.PUBLIC_TURNSTILE_SITE_KEY || "1x00000000000000000000AA",
  action = "",
  theme = "auto",
  size = "normal"
} = Astro.props;
---

<div class="turnstile-container">
  <div 
    class="cf-turnstile" 
    data-sitekey={siteKey}
    data-action={action}
    data-theme={theme}
    data-size={size}
  ></div>
</div>

<script is:inline src="https://challenges.cloudflare.com/turnstile/v0/api.js" async defer></script>

<style>
  .turnstile-container {
    margin: 1rem 0;
    display: flex;
    justify-content: center;
  }
</style>
